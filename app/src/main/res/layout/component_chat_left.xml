<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginEnd="28dp"
    android:layout_marginVertical="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_chatbot"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="4dp"
        android:background="@color/primary_blue_25"
        android:src="@drawable/ic_chatbot_2"
        app:contentPadding="6dp"
        app:shapeAppearance="@style/CircularShapeAppearance" />

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white_black_50"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:orientation="vertical"
            android:gravity="end">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem"
                android:textColor="@color/primary_navy_100" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>